{
  "info": {
    "name": "HospiTech - Sistema Hospitalar Inteligente",
    "description": "Collection para testar as APIs do sistema HospiTech",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8081"
    },
    {
      "key": "historyUrl",
      "value": "http://localhost:8082"
    },
    {
      "key": "notifyUrl",
      "value": "http://localhost:8083"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Autenticação",
      "item": [
        {
          "name": "Registrar Médico",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"medico@hospitech.com\",\n  \"password\": \"123456\",\n  \"name\": \"Dr. João Silva\",\n  \"cpf\": \"12345678901\",\n  \"role\": \"DOCTOR\",\n  \"specialty\": \"Cardiologia\",\n  \"crm\": \"12345\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Registrar Paciente",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"paciente@email.com\",\n  \"password\": \"123456\",\n  \"name\": \"Maria Santos\",\n  \"cpf\": \"98765432100\",\n  \"role\": \"PATIENT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"medico@hospitech.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Agendamentos",
      "item": [
        {
          "name": "Criar Agendamento",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"patientId\": 2,\n  \"doctorId\": 1,\n  \"appointmentDate\": \"2024-12-25T14:00:00\",\n  \"notes\": \"Consulta de rotina\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/appointments",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments"]
            }
          }
        },
        {
          "name": "Listar Agendamentos do Paciente",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/appointments/patient/2",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments", "patient", "2"]
            }
          }
        },
        {
          "name": "Atualizar Status do Agendamento",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"COMPLETED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/appointments/1/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "appointments", "1", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "Usuários",
      "item": [
        {
          "name": "Listar Médicos",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/doctors",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "doctors"]
            }
          }
        }
      ]
    },
    {
      "name": "Histórico Médico (GraphQL)",
      "item": [
        {
          "name": "Consultar Histórico do Paciente",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"query { patientHistory(patientId: \\\"2\\\") { id diagnosis treatment medications recordDate } }\"\n}"
            },
            "url": {
              "raw": "{{historyUrl}}/graphql",
              "host": ["{{historyUrl}}"],
              "path": ["graphql"]
            }
          }
        },
        {
          "name": "Criar Registro Médico",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"mutation { createMedicalRecord(input: { patientId: \\\"2\\\", doctorId: \\\"1\\\", appointmentId: \\\"1\\\", diagnosis: \\\"Hipertensão arterial\\\", treatment: \\\"Medicação anti-hipertensiva\\\", medications: \\\"Losartana 50mg\\\", observations: \\\"Paciente respondendo bem ao tratamento\\\" }) { id diagnosis recordDate } }\"\n}"
            },
            "url": {
              "raw": "{{historyUrl}}/graphql",
              "host": ["{{historyUrl}}"],
              "path": ["graphql"]
            }
          }
        }
      ]
    },
    {
      "name": "Monitoramento",
      "item": [
        {
          "name": "Health Check - Agendamento",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/actuator/health",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "health"]
            }
          }
        },
        {
          "name": "Health Check - Histórico",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{historyUrl}}/actuator/health",
              "host": ["{{historyUrl}}"],
              "path": ["actuator", "health"]
            }
          }
        },
        {
          "name": "Health Check - Notificação",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{notifyUrl}}/actuator/health",
              "host": ["{{notifyUrl}}"],
              "path": ["actuator", "health"]
            }
          }
        }
      ]
    }
  ]
}